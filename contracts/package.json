{
  "name": "gsn-playground-contracts",
  "version": "0.0.1",
  "description": "smart contracts for GSN playground",
  "license": "UNLICENSED",
  "private": true,
  "devDependencies": {
    "@nomiclabs/buidler": "^1.2.0",
    "@smartdec/smartcheck": "^2.0.1",
    "buidler-deploy": "^0.3.4",
    "buidler-ethers-v5": "^0.2.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "cross-env": "^7.0.2",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-mocha": "^0.0.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-mocha": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.3",
    "ethers": "^5.0.0-beta.184",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "prettier-plugin-solidity": "^1.0.0-alpha.48",
    "solc": "0.5.9",
    "solhint": "^2.3.1",
    "solhint-plugin-prettier": "^0.0.4"
  },
  "scripts": {
    "postinstall": "node ./.setup.js",
    "prettier:solidity": "prettier --write src/**/*.sol",
    "prettier:js": "prettier --write deploy test scripts",
    "prettier": "run-s prettier:*",
    "compile": "buidler compile",
    "smartcheck": "smartcheck -p .",
    "test": "buidler compile && mocha --bail --recursive test",
    "local:deploy": "buidler --network localhost deploy",
    "local:run": "cross-env BUIDLER_NETWORK=localhost node",
    "local:seed": "cross-env BUIDLER_NETWORK=localhost node scripts/seed.js",
    "rinkeby:deploy": "buidler deploy --network rinkeby",
    "kovan:deploy": "buidler deploy --network kovan --export ../webapp/src/contracts/staging.json",
    "goerli:deploy": "buidler deploy --network goerli",
    "mainnet:deploy": "buidler deploy --network mainnet"
  }
}
